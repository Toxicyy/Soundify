# Используем Node.js 22 (ваша версия)
FROM node:22-alpine

# Устанавливаем ffmpeg (нужен для @ffmpeg-installer)
RUN apk add --no-cache ffmpeg

WORKDIR /app

# Копируем все package.json файлы для оптимального кеширования слоев
COPY package*.json ./
COPY client/package*.json ./client/
COPY server/package*.json ./server/

# Устанавливаем зависимости
RUN npm install
RUN cd client && npm ci --only=production
RUN cd server && npm ci --only=production

# Копируем исходный код
COPY client/ ./client/
COPY server/ ./server/

# Собираем клиент
RUN npm run build:client

# Создаем non-root пользователя для безопасности
RUN addgroup -g 1001 -S nodejs
RUN adduser -S soundify -u 1001

# Создаем директории для uploads и логов
RUN mkdir -p /app/uploads /app/logs
RUN chown -R soundify:nodejs /app

# Переключаемся на non-root пользователя
USER soundify

# Экспонируем порт (для хостинга обычно используют переменную PORT)
EXPOSE 5000

# Переходим в директорию сервера
WORKDIR /app/server

# Healthcheck для проверки работоспособности
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:' + (process.env.PORT || 5000) + '/api/health', (res) => { process.exit(res.statusCode === 200 ? 0 : 1) }).on('error', () => process.exit(1))"

# Запускаем сервер
CMD ["npm", "start"]