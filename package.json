    "@ffprobe-installer/ffprobe": "^2.1.2",
    "backblaze-b2": "^1.7.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "fluent-ffmpeg": "^2.1.3",
    "fs": "^0.0.1-security",
    "geoip-lite": "^1.4.10",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.15.0",
    "multer": "^2.0.0",
    "node-cron": "^4.2.1",
    "path": "^0.12.7",
    "path-to-regexp": "^8.2.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "@types/express": "^5.0.2",
    "@types/lodash": "^4.17.17",
    "@types/node": "^22.15.20",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
